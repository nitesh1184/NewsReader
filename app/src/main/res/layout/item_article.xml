<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_horizontal_margin_4"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@color/cgg_light"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    app:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin_2">

        <ImageView
            android:id="@+id/iv_source_logo"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_article_source"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_source_logo"
            android:layout_alignTop="@id/iv_source_logo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_2"
            android:layout_toRightOf="@id/iv_source_logo"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_article_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_article_source"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_2"
            android:layout_marginTop="@dimen/activity_horizontal_margin_2"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/iv_source_logo"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_2"
            android:layout_marginTop="@dimen/activity_horizontal_margin_2"
            android:layout_toLeftOf="@id/iv_article_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/cgg_primary_text"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_article_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_article_title"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_2"
            android:layout_marginBottom="@dimen/activity_horizontal_margin_4"
            android:layout_marginTop="@dimen/activity_horizontal_margin_4"
            android:layout_toLeftOf="@id/iv_article_image"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/cgg_secondary_text"
            android:textSize="14sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>